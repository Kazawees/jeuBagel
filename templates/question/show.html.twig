{% block title %}Question{% endblock %}

{% block body %}
<div class="container">
    <h2>Question</h2>

    <table class="table table-hover table-bordered text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ question.Question }}</td>
